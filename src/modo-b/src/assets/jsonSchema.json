      "type": "object",
      "title": "newRequest.setting.title",
      "properties": {
        "selezionaUser": {
          "type": "object",
          "title": "Seleziona l'user",
          "widget": {
            "formlyConfig": {
              "type": "user-type"
            }
          },
          "properties": {
            "user": {
              "$ref": "#/definitions/User",
